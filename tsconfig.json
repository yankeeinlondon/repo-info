{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "DOM"
        ],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "incremental": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "types": [
            "vite/client"
        ],
        "paths": {
            "src/*": [
                "src/*"
            ],
            "test/*": [
                "test/*"
            ]
        }
    },
    "include": [
        "src",
        "test",
        "env.d.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}