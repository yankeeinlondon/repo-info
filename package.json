{
    "name": "@yankeeinlondon/repo-info",
    "version": "0.3.1",
    "description": "Provides an API surface for querying repos across Github and other Git hosts",
    "type": "module",
    "repository": {
        "url": "https://github.com/yankeeinlondon/repo-info"
    },
    "types": "dist/index.d.ts",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "author": {
        "name": "Ken Snyder",
        "email": "ken@ken.net"
    },
    "license": "MIT",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "vitest",
        "test:ci": "vitest run",
        "build": "tsup src/index.ts --format=esm,cjs --dts --clean",
        "watch": "run-p watch:*",
        "watch:build": "tsup src/index.ts --format=esm,cjs --dts --watch",
        "watch:test": "vitest watch --ui",
        "lint": "eslint src --ext ts,js,tsx,jsx --fix & tsc --noEmit",
        "audit:fix": "pnpm audit --fix",
        "release": "run-s build lint test:ci release:latest audit:fix release:bump",
        "release:latest": "pnpm install",
        "release:bump": "bumpp",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@octokit/types": "^8.0.0",
        "brilliant-errors": "^0.6.1",
        "inferred-types": "^0.33.2",
        "node-fetch": "^3.3.0",
        "query-string": "^7.1.1"
    },
    "devDependencies": {
        "@type-challenges/utils": "^0.1.1",
        "@types/node": "^16.18.3",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vitest/ui": "^0.25.3",
        "bumpp": "^8.2.1",
        "dotenv": "^16.0.3",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-unicorn": "^45.0.1",
        "npm-run-all": "^4.1.5",
        "pathe": "^1.0.0",
        "prettier": "^2.8.0",
        "tsup": "^6.5.0",
        "typescript": "^4.9.3",
        "vite": "^3.2.4",
        "vitest": "^0.25.3"
    }
}