{
    "name": "@yankeeinlondon/repo-info",
    "version": "0.2.3",
    "description": "Provides an API surface for querying repos across Github and other Git hosts",
    "type": "module",
    "types": "./dist/index.d.ts",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "author": {
        "name": "Ken Snyder",
        "email": "ken@ken.net"
    },
    "license": "MIT",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "vitest",
        "test:ci": "vitest run",
        "build": "tsup src/index.ts --format=esm,cjs --dts",
        "lint": "eslint src --ext ts,js,tsx,jsx --fix --no-error-on-unmatched-pattern",
        "audit:fix": "pnpm audit --fix",
        "release": "run-s build lint test:ci release:latest audit:fix release:bump",
        "release:latest": "pnpm install",
        "release:bump": "bumpp"
    },
    "dependencies": {
        "@octokit/types": "^8.0.0",
        "inferred-types": "^0.26.0",
        "node-fetch": "^3.2.10",
        "query-string": "^7.1.1"
    },
    "devDependencies": {
        "@type-challenges/utils": "^0.1.1",
        "@types/node": "^16.18.2",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "@vitest/ui": "^0.24.3",
        "bumpp": "^8.2.1",
        "dotenv": "^16.0.3",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-unicorn": "^44.0.2",
        "npm-run-all": "^4.1.5",
        "pathe": "^0.3.9",
        "prettier": "^2.7.1",
        "tsup": "^6.3.0",
        "typescript": "^4.8.4",
        "vite": "^3.2.0",
        "vitest": "^0.24.3"
    }
}